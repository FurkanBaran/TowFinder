@model TowFinder.ViewModels.TowOperatorRegisterViewModel;
@section Title {
   Çekici Operatör Kaydı
}
<div class="container mt-5">
    <div class="row border  p-4 shadow " style="border-radius: 21px;    background: #ba68c857;">
        <h2>Çekici Operatör Kaydı</h2>
        <hr />
        <br />

    <form id="registerForm" asp-action="Register" method="post">
        <div class="form-group">
            <label asp-for="Name">İsim</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone">Telefon</label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="City">İl</label>
            <input asp-for="City" class="form-control" />
            <span asp-validation-for="City" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="District">İlçe</label>
            <input asp-for="District" class="form-control" />
            <span asp-validation-for="District" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Username">Kullanını Adı</label>
            <input asp-for="Username" class="form-control" id="Username" />
            <span asp-validation-for="Username" class="text-danger"></span>
            <span id="usernameError" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Şifre</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Kaydol</button>
    </form>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('#registerForm').submit(function (event) {
            var username = $('#Username').val();
            var turkishCharacters = /[ĞÜŞİÖÇğüşıöç]/;

            if (turkishCharacters.test(username)) {
                $('#usernameError').text('Kullanıcı adı Türkçe karakter içermemelidir.');
                event.preventDefault(); // Formun gönderilmesini engeller
            } else {
                $('#usernameError').text('');
            }
        });
    });
</script>